<h2 class="text-center mt-2">Log in</h2>

<%# start the partial file with '_' and rails will take it as partial %>
<div class="container">
    <div class="d-flex justify-content-center">
        <div class="col-10">
            <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                <div class ="form-group row mt-3">
                    <%= f.label :email, class: "col-2 col-form-label text-light"%>
                    <div class="col-10">
                        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
                    </div>
                </div>

                <div class ="form-group row mt-3">
                    <%= f.label :password, class: "col-2 col-form-label text-light"%>
                    <div class="col-10">
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="d-flex justify-content-center col mt-3">
                        <%= f.submit "Log in", class: "btn btn-outline-light btn-lg shadow rounded" %>
                    </div>
                </div>

            <% end %>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <div class="d-flex justify-content-center col-3 mt-3">
            <%= link_to '[ Return to Articles Listing ]', articles_path, class: "text-info"%>
        </div>
    </div>

</div>