<%# start the partial file with '_' and rails will take it as partial %>
<div class="container">
  <%= render 'shared/errors', obj: @article %>
    <div class="d-flex justify-content-center">
        <div class="col-10">
            <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                <div class ="form-group row">
                    <%= f.label :title, class: "col-2 col-form-label text-light"%>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of the Article"%>
                    </div>
                </div>

                <div class ="form-group row mt-3">
                    <%= f.label :description, class: "col-2 col-form-label text-light"%>
                    <div class="col-10">
                        <%= f.text_area :description, rows:10, class: "form-control shadow rounded", placeholder: "Description of the Article" %>
                    </div>
                </div>


                <div class ="form-group row mt-3">
                    <%= f.label :category, class: "col-2 col-form-label text-light"%>
                    <div class="col-10">
                        <%= f.collection_select(:category_ids, Category.all, :id, :name,
                        {prompt: "Make your selection from the list below (can be empty)"}, { multiple: true, size: 4, class: "form-select shadow rounded"}) %>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="d-flex justify-content-center col mt-3">
                        <%= f.submit class: "btn btn-outline-light btn-lg shadow rounded" %>
                    </div>
                </div>

            <% end %>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <div class="d-flex justify-content-center col-3 mt-3">
            <%= link_to '[ Return to Articles Listing ]', articles_path, class: "text-info"%>
        </div>
    </div>

</div>