<h2 class="text-center mt-2">Create a new category</h2>

<div class="container">
  <%= render 'shared/errors', obj: @category %>
    <div class="d-flex justify-content-center">
        <div class="col-10">
            <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                <div class ="form-group row">
                    <%= f.label :name, "Category Name", class: "col-2 col-form-label text-light"%>
                    <div class="col-10">
                        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name"%>
                    </div>
                </div>

               
                <div class="form-group row">
                    <div class="d-flex justify-content-center col mt-3">
                        <%= f.submit class: "btn btn-outline-light btn-lg shadow rounded" %>
                    </div>
                </div>

            <% end %>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <div class="d-flex justify-content-center col-3 mt-3">
            <%= link_to '[ Return to Articles Listing ]', articles_path, class: "text-info"%>
        </div>
    </div>

</div>